<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <NuGetStagingDir Condition="'$(NuGetStagingDir)' == ''">$(MSBuildThisFileDirectory)../nuget-staging</NuGetStagingDir>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>CoreUtils.ANGLE.Static</PackageId>
        <Version>2.1.0</Version>
        <Authors>CoreUtils</Authors>
        <Description>ANGLE static library for Avalonia</Description>
        <PackageLicenseExpression>Unlicense</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/andrewmd5/ANGLE.Static</PackageProjectUrl>
        <RepositoryUrl>https://github.com/andrewmd5/ANGLE.Static</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
        <None Include="buildTransitive/$(PackageId).targets" Pack="true" PackagePath="buildTransitive" />
    </ItemGroup>

    <!-- x64 libraries -->
    <ItemGroup>
        <None Include="$(NuGetStagingDir)/runtimes/win-x64/native/libANGLE_static.lib" Pack="true" PackagePath="runtimes/win-x64/native/" />
        <None Include="$(NuGetStagingDir)/runtimes/win-x64/native/libGLESv2_static.lib" Pack="true" PackagePath="runtimes/win-x64/native/" />
    </ItemGroup>

    <!-- arm64 libraries -->
    <ItemGroup>
        <None Include="$(NuGetStagingDir)/runtimes/win-arm64/native/libANGLE_static.lib" Pack="true" PackagePath="runtimes/win-arm64/native/" />
        <None Include="$(NuGetStagingDir)/runtimes/win-arm64/native/libGLESv2_static.lib" Pack="true" PackagePath="runtimes/win-arm64/native/" />
    </ItemGroup>
</Project>
